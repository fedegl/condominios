<div id="contact_form">
	<h2>Contáctanos</h2>
	<div id="division"></div>
	<p class="title">Envía tus dudas, sugerencias o comentarios y nosotros nos pondremos en contacto contigo</p>
	<p class="subtitle">Los campos marcados con <span class="asterisk">*</span> son obligatorios</p>

<% form_for :contact, :url => contact_path do |f| %>
	<p>
		<span class="asterisk">*</span><%= f.label :name, "Nombre", :class => "label"%><br/>
		<%= f.text_field :name, :class => "required text_field" %>
	</p>
	
	<p>
		<span class="asterisk">*</span><%= f.label :name, "Correo electrónico", :class => "label"%><br/>
		<%= f.text_field :email, :class => "required text_field" %>
	</p>
	
	<p>
		<span class="asterisk">*</span><%= f.label :message, "Mensaje", :class => "label"%><br/>
		<%= f.text_area :message, :class => "required text_area" %>
	</p>
	
	<p>
		<%= image_submit_tag "/images/enviar.png" %>
	</p>
</div>
<% end %>

