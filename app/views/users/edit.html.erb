<% form_for @user do |f| %>
	
	<p>
		<%= f.label :name, "Nombre Completo" %>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :email, "Correo electrónico" %>
		<%= f.text_field :email %>
	</p>
	
	<p>
		<%= f.label :password, "Contraseña" %>
		<%= f.password_field :password %>
	</p>
	
	<p>
		<%= f.submit "Actualizar" %>
	</p>
	
<% end %>

<div id="new_password">
	

<a href="#">Nuevo password</a>
</div>

<div id="new_password_form">
	<% form_for(:user, :url => user_password_path(@user), :html => { :method => :put }) do |f| %>

		<p>
		 	<%= label_tag :old_password, "Contraseña actual" %><br/>
			<%= password_field_tag :old_password %>
		</p>

		<p>
			<%= f.label :password, "Nueva contraseña" %><br/>
			<%= f.password_field :password %>
		</p>
	
		<p>
			<%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br/>
			<%= f.password_field :password_confirmation %>
		</p>
	
		<p>
			<%= f.submit "Actualizar" %><%= link_to "Cancelar", root_path %>
		</p>	
	<% end %>
</div>	
