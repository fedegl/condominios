<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Administración de Condominios") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'ui.selectmenu' %>
    <%= stylesheet_link_tag 'jquery-ui-1.7.2.custom' %>
    <%= javascript_include_tag 'jquery-1.3.2' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'jquery.rest_in_place' %>
    <%= javascript_include_tag 'jquery-ui-1.7.2.custom.min' %>
    <%= javascript_include_tag 'ui.selectmenu' %>
    <%= yield(:head) %>
   
  </head>
  <body>
    <div id="main_container">      
      <div id="sub_container">
      	<div id="signin">					
					<% if admin? %>
						<p>Bienvenido <%= link_to current_user.name, user_path(current_user) %> | <%= link_to "Salir", logout_path %> | <%= link_to "Administración", users_path %></p>
						<% elsif logged_in? %>
							Bienvenido <%= link_to current_user.name, user_path(current_user) %> | <%= link_to "Salir", logout_path %></p>
						<% else %>
							<%= link_to image_tag("/images/signupbtn.png"), signup_path, :class => "options" %>
							<%= link_to image_tag("/images/loginbtn.png"), "#", :class => "signin options" %>
					<% end %>					
		 		</div>
		 		
		 		<fieldset id="signin_menu">
		 			<% form_tag session_path do -%>
						<p><%= label_tag 'E-mail' %><br />
						<%= text_field_tag 'email', @email %></p>

						<p><%= label_tag 'password' %><br/>
						<%= password_field_tag 'password', nil %></p>

						<!-- Uncomment this if you want this functionality
						<p><%= label_tag 'remember_me', 'Remember me' %>
						<%= check_box_tag 'remember_me', '1', @remember_me %></p>
						-->						
						<p id="loginbtn"><span><%= link_to "¿Olvidaste tu contraseña?", "#" %></span><%= image_submit_tag "/images/login_small.png" %></p>
					<% end -%>
		  	</fieldset> 
  
  	    <div id="header">
   	 			<div id="left_header"><img src="/images/doblezizq.png"/></div>
					<a href="/"><img class="logomarca" src="/images/logo.png"/></a>
					<div id="right_header"><img src="/images/doblezder.png"/></div>				
				</div>
      	<div id="sub_content">
      		<%- flash.each do |name, msg| -%>
        		<%= content_tag :div, msg, :id => "flash_#{name}" %>
		      <%- end -%>      
		      <%- if show_title? -%>
		        <h1><%=h yield(:title) %></h1>
		      <%- end -%>
		      
		      <% unless current_page?(:controller => 'sessions') or current_page?(:controller => 'companies', :action => 'search') %>
		      	<%= link_to "¿Buscas un administrador?", search_path, :class => "search_admin" %>
		      <% end %>
		      
		      <%= yield %>
      	</div>      	
      </div>
      <div class="clearfooter"></div>
    </div>
    	<div id="footer">
    		<div id="city">
    			<img src="/images/ciudad.png"/>
    		</div>
    		<div id="info">
    			<a href="#">¿Quiénes somos? </a>/<a href="#"> Contáctanos </a>/<a href="#"> Privacidad </a>/
	    		<a href="http://www.innku.com">Innku</a>
    		</div>
    	</div>    	
  </body>
</html>
